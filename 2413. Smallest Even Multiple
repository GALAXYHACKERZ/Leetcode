public class Solution {
    public int smallestEvenMultiple(int n) {
        // If n is even, the smallest multiple of both 2 and n is n itself.
        // If n is odd, the smallest multiple of both 2 and n is 2 * n.
        return (n % 2 == 0) ? n : 2 * n;
    }

    public static void main(String[] args) {
        Solution solution = new Solution();
        System.out.println(solution.smallestEvenMultiple(5)); // Output: 10
        System.out.println(solution.smallestEvenMultiple(6)); // Output: 6
    }
}
